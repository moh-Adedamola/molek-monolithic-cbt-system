{
  "appId": "com.molek.cbt",
  "productName": "Molek CBT System",
  "copyright": "Copyright Â© 2025 Molek School",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/resources"
  },
  "files": [
    "electron/**/*",
    "!electron/resources/**/*",
    "frontend/dist/**/*",
    "backend/src/**/*",
    "backend/package.json",
    "!backend/package-lock.json",
    "package.json",
    "!**/node_modules/**/*",
    "!**/*.map",
    "!**/*.ts",
    "!**/test/**/*",
    "!**/tests/**/*",
    "!**/__test__/**/*",
    "!**/archives/**/*",
    "!**/logs/**/*",
    "!**/*.log",
    "!**/*.md",
    "!**/*.txt",
    "!**/LICENSE*",
    "!**/CHANGELOG*"
  ],
  "extraFiles": [
    {
      "from": "backend/node_modules",
      "to": "resources/backend/node_modules",
      "filter": [
        "**/*",
        "!.cache/**/*",
        "!**/test/**/*",
        "!**/tests/**/*",
        "!**/*.md",
        "!**/*.markdown",
        "!**/*.txt",
        "!**/LICENSE*",
        "!**/CHANGELOG*",
        "!**/*.d.ts",
        "!**/*.map",
        "!**/docs/**/*",
        "!**/example/**/*",
        "!**/examples/**/*",
        "!**/.github/**/*"
      ]
    }
  ],
  "compression": "maximum",
  "asar": true,
  "asarUnpack": [
    "**/*.node",
    "**/bcrypt/**/*",
    "**/sqlite3/**/*",
    "**/better-sqlite3/**/*"
  ],
  "npmRebuild": true,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "electronVersion": "28.0.0",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "electron/icon.ico",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "requireAdministrator"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "electron/icon.ico",
    "uninstallerIcon": "electron/icon.ico",
    "installerHeaderIcon": "electron/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Molek CBT System",
    "runAfterFinish": true,
    "perMachine": true,
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "backend/src/db",
      "to": "backend/src/db",
      "filter": [
        "**/*.db"
      ]
    }
  ],
  "publish": {
    "provider": "generic",
    "url": "https://github.com/moh-Adedamola/molek-monolithic-cbt-system/releases/latest"
  },
  "afterPack": "./Afterpack.js"
}