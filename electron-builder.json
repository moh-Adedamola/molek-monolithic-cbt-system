{
  "appId": "com.molek.cbt",
  "productName": "Molek CBT System",
  "copyright": "Copyright Â© 2025 Molek School",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/resources"
  },
  "files": [
    "electron/**/*",
    "!electron/resources/**/*",
    "frontend/dist/**/*",
    "backend/src/**/*",
    "backend/package.json",
    "backend/package-lock.json",
    "backend/node_modules/**/*",
    "!backend/node_modules/.cache",
    "!backend/node_modules/**/*.{md,markdown,txt}",
    "!backend/node_modules/**/test/**/*",
    "!backend/node_modules/**/tests/**/*",
    "package.json"
  ],
  "compression": "maximum",
  "asar": true,

  "asarUnpack": [
    "backend/**/*.db",
    "backend/src/**/*",
    "backend/node_modules/bcrypt/**/*",
    "backend/node_modules/sqlite3/**/*",
    "backend/node_modules/better-sqlite3/**/*",
    "**/*.node"
  ],

  "npmRebuild": true,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": true,

  "electronVersion": "28.0.0",

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/icon.ico",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "requireAdministrator"
  },

  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "electron/icon.ico",
    "uninstallerIcon": "electron/icon.ico",
    "installerHeaderIcon": "electron/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Molek CBT System",
    "runAfterFinish": true,
    "perMachine": true,
    "deleteAppDataOnUninstall": false
  },

  "extraResources": [
    {
      "from": "backend/src/db",
      "to": "backend/src/db",
      "filter": ["**/*.db"]
    }
  ],

  "publish": {
    "provider": "generic",
    "url": "https://github.com/moh-Adedamola/molek-monolithic-cbt-system/releases/latest"
  }
}