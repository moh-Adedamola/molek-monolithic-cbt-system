{
  "appId": "com.molek.cbt",
  "productName": "Molek CBT System",
  "copyright": "Copyright Â© 2025 Molek School",
  "directories": {
    "output": "dist-electron",
    "buildResources": "electron/resources"
  },
  "files": [
    "electron/**/*",
    "frontend/dist/**/*",
    "backend/dist/**/*",
    "backend/node_modules/**/*",
    "package.json"
  ],
  "afterPack": "./afterPack.js",
  "compression": "maximum",
  "asar": true,

  "asarUnpack": [],

  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,

  "electronVersion": "28.0.0",

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/icon.ico",
    "verifyUpdateCodeSignature": false
  },

  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "electron/icon.ico",
    "uninstallerIcon": "electron/icon.ico",
    "installerHeaderIcon": "electron/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Molek CBT System",
    "runAfterFinish": true,
    "perMachine": true,
    "deleteAppDataOnUninstall": true
  },

  "publish": {
    "provider": "generic",
    "url": "https://github.com/moh-Adedamola/molek-monolithic-cbt-system/releases/latest"
  }
}